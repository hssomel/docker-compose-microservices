pipeline{
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    some-label: some-label-value
spec:
  containers:
  - name: docker
    image: gurkamal/docker-in-docker:18.09.9
    imagePullPolicy: Always
    command:
    - cat
    tty: true
    volumeMounts:
    - mountPath: /var/run/docker.sock
      name: docker-sock
    - mountPath: /root/.kube
      name: kubeconfig
  volumes:
  - name: docker-sock
    hostPath:
      path: /var/run/docker.sock
  - name: kubeconfig
    secret:
      secretName: kubeconfig
"""
    }
  }
  environment {
    ME_CONFIG_BASICAUTH_USERNAME_PROD = credentials('ME_CONFIG_BASICAUTH_USERNAME_PROD')
    ME_CONFIG_BASICAUTH_PASSWORD_PROD = credentials('ME_CONFIG_BASICAUTH_PASSWORD_PROD')
    MONGO_ROOT_USERNAME_PROD = credentials('MONGO_ROOT_USERNAME_PROD')
    MONGO_ROOT_PASSWORD_PROD = credentials('MONGO_ROOT_PASSWORD_PROD')

    DOCKERHUB_USERNAME = credentials('dockerhub-username')
    DOCKERHUB_PASSWORD = credentials('dockerhub-password')
  }
  stages {
    stage('Download Repo') {
      steps {
        container('docker') {
          git credentialsId: '964b7f10-4c8b-425f-8b37-67ad7e96beae', url: 'https://git.toptal.com/screening/gurkamal-singh'
        }
      }
    }
    stage('Log into Dockerhub') {
      steps {
        container('docker') {
          sh "docker login --username=\$DOCKERHUB_USERNAME --password=\$DOCKERHUB_PASSWORD"
        }
      }
    }
    stage('Build & Publish Images to DockerHub') {
      steps {
        container('docker') {
          sh "docker build static -t gurkamal/static:${BUILD_NUMBER}"
          sh "docker build haproxy -t gurkamal/haproxy:${BUILD_NUMBER}"
          sh "docker build statistics -t gurkamal/statistics:${BUILD_NUMBER}"
          sh "docker tag gurkamal/static:${BUILD_NUMBER} gurkamal/static:prod"
          sh "docker tag gurkamal/haproxy:${BUILD_NUMBER} gurkamal/haproxy:prod"
          sh "docker tag gurkamal/statistics:${BUILD_NUMBER} gurkamal/statistics:prod"
          sh "docker push gurkamal/static:${BUILD_NUMBER}"
          sh "docker push gurkamal/haproxy:${BUILD_NUMBER}"
          sh "docker push gurkamal/statistics:${BUILD_NUMBER}"
          sh "docker push gurkamal/static:prod"
          sh "docker push gurkamal/haproxy:prod"
          sh "docker push gurkamal/statistics:prod"
        }
      }
    }
    stage('Reset previous prod environment') {
      steps {
        container('docker') {
          sh 'export RESULT=\$(kubectl get namespaces | grep "^prod ")'
          sh 'if [ -z "\$RESULT" ]; then kubectl delete namespace prod; fi'
          sh "kubectl create ns prod"
        }
      }
    } 
    stage('Expose prod environment at prod.gurkamalsingh.com') {
      steps {
        container('docker') {
          sh """echo '
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: prod
  generation: 1
  namespace: prod
spec:
  rules:
  - host: prod.gurkamalsingh.com
    http:
      paths:
      - backend:
          serviceName: haproxy
          servicePort: 80' > ingress.yaml
"""
          sh "kubectl apply -f ingress.yaml"
        }
      }
    }   
    stage('Deploy to Kubernetes') {
      steps {
        container('docker') {
          sh 'envsubst < docker-compose-prod.yml > rendered-docker-compose-prod.yml'
          sh "kompose convert --file rendered-docker-compose-prod.yml --out prod-manifest.yaml"
          sh "kubectl apply -f prod-manifest.yaml -n prod"
        }
      }
    }   
  }
}